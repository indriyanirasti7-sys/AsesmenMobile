<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".kalkulator">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/latarbelakang_kalkulator"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="KALKULATOR"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/angka"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/brown"
        android:elevation="4dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvDisplay1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDisplay2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Button Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/brown"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Baris 1: C, ⌫, +/-, ÷ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="C"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnsatu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="⌫"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btnBagi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="÷"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Baris 2: 7, 8, 9, × -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="7"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="8"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="9"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnKali"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="×"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Baris 3: 4, 5, 6, - -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="4"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="5"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="6"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnKurang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Baris 4: 1, 2, 3, + -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5
"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="1"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="2"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="3"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnTambah"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Baris 5: 0, ., = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlusMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="+/-"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="0"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnTitik"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cream"
                    android:elevation="2dp"
                    android:text="."
                    android:textColor="@color/pink"
                    android:textSize="3sp" />

                <Button
                    android:id="@+id/btnSamaDengan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_Pink"
                    android:elevation="2dp"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>