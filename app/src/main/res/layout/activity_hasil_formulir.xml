<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white"
    tools:context=".hasil_formulir"> <!-- Pastikan ini sesuai dengan nama Activity Anda -->

    <!-- 1. Card Header: Hasil Formulir -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FADADD"
        app:cardElevation="4dp"
        android:translationZ="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Formulir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

    <!-- 2. ScrollView untuk Konten Hasil Formulir -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp">

            <!-- CardView Utama (Wadah Hasil) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:minHeight="500dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FADADD"
                android:elevation="4dp"
                android:translationZ="4dp">

                <!-- Kontainer Vertikal untuk Detail Hasil -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <!-- NAMA -->
                    <TextView
                        android:id="@+id/label_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_hasil_nama"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[Nama Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                    <!-- ALAMAT -->
                    <TextView
                        android:id="@+id/label_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_hasil_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[Alamat Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                    <!-- NO HANDPHONE -->
                    <TextView
                        android:id="@+id/label_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Handphone"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_hasil_hp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[HP Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                    <!-- AGAMA -->
                    <TextView
                        android:id="@+id/label_agama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agama"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_hasil_agama"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[Agama Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                    <!-- JENIS KELAMIN -->
                    <TextView
                        android:id="@+id/label_jk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_hasil_jk"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[JK Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                    <!-- HOBI -->
                    <TextView
                        android:id="@+id/label_hobi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hobi"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_hasil_hobi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:text="[Hobi Hasil]"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:background="@drawable/garisbawah"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- 3. Tombol Kembali (Fixed di bawah) -->
    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFB6C1"
        android:layout_gravity="center_horizontal"
        android:text="Kembali"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>